<h1>Messages</h1>
<% @messages.each do |message| %>
  <div id="message-<%= message.id %>">
    <%= link_to message.text, message_path(message) %>
    <%= message.user.email %>
    <%= link_to "Delete Message", message, method: :delete, data: { confirm: 'Are you sure?' } %>
  </div>
<% end %>

<%= link_to "New Message", new_message_path %>
