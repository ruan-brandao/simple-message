<h1>Messages</h1>
<% @messages.each do |message| %>
  <div id="message-<%= message.id %>">
    <%= link_to message.text, message_path(message) %>
    <%= message.user.email %>
    <%= message_delete_link(message) %>
  </div>
<% end %>

<%= link_to "New Message", new_message_path if user_signed_in? %>
